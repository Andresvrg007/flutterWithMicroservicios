# Notification Service Environment Variables
PORT=3004
NODE_ENV=development

# Database
MONGODB_URI=mongodb://mongo:27017/finance_notifications

# Redis Queue
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h

# Firebase Cloud Messaging
FCM_PROJECT_ID=your-firebase-project-id
FCM_PRIVATE_KEY_ID=your-private-key-id
FCM_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FCM_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FCM_CLIENT_ID=your-client-id
FCM_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FCM_TOKEN_URI=https://oauth2.googleapis.com/token

# Apple Push Notification (APNs)
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-team-id
APNS_BUNDLE_ID=com.yourcompany.financeapp
APNS_PRIVATE_KEY_PATH=./certs/apns-key.p8
APNS_PRODUCTION=false

# Web Push
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:support@yourcompany.com

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=Finance App <noreply@yourcompany.com>

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Socket.IO
SOCKET_CORS_ORIGIN=*
SOCKET_PORT=3005

# Rate Limiting
RATE_LIMIT_NOTIFICATIONS=100
RATE_LIMIT_WINDOW=3600000

# Worker Configuration
MAX_NOTIFICATION_WORKERS=3
QUEUE_CONCURRENCY=10
RETRY_ATTEMPTS=3
RETRY_DELAY=5000

# Monitoring
METRICS_PORT=3006
