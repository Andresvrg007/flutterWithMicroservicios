ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# ================================
# üê≥ DOCKER & DEPLOYMENT
# ================================
DOCKER_NETWORK=finance-network
HEALTH_CHECK_INTERVAL=30
