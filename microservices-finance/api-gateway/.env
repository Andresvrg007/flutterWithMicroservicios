# üöÄ FINANCE API GATEWAY - PRODUCTION READY

# ================================
# üì° SERVICE CONFIGURATION
# ================================
NODE_ENV=development
PORT=8080
API_VERSION=v1

# ================================
# üîê SECURITY & AUTH
# ================================
JWT_SECRET=your_super_secret_jwt_key_here_finance_2024
JWT_EXPIRY=7d
BCRYPT_ROUNDS=12

# ================================
# üåê MICROSERVICES ENDPOINTS
# ================================
