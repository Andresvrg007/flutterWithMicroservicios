# ================================
# üîê SECURITY & AUTHENTICATION
# ================================
JWT_SECRET=your_super_secret_jwt_key_finance_microservices_2024_production
BCRYPT_ROUNDS=12

# ================================
# üóÑÔ∏è DATABASE CONFIGURATION
